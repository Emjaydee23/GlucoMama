            <div class="sqs-block-content">
                <div class="sqs-html-content">
                    <div class="sqsrte-scaled-text-container loaded">
                        <span class="sqsrte-scaled-text">
                            <p><strong>MONDAY</strong></p>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="fe-block fe-breakfast">
        <div class="sqs-block html-block sqs-block-html" id="breakfast-block">
            <!-- Placeholder image -->
            <img src="placeholder_image_url" alt="Breakfast">
