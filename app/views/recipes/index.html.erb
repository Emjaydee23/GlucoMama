<!-- app/views/recipes/index.html.erb -->

<!-- Set the title of the page -->
<h1>Recipes</h1>

<!-- Categories bar/buttons -->
<div class="categories">
  <button class="category-button">Breakfast</button>
  <button class="category-button">Lunch</button>
  <button class="category-button">Dinner</button>
  <button class="category-button">Snacks</button>
</div>

<!-- Body of the page -->
<div class="recipe-cards">
  <!-- Replace the following with actual recipe data from your database -->
  <% @recipes.each do |recipe| %>
    <div class="card">
      <%= image_tag recipe.image_url, class: "recipe-image" %>
      <div class="card-body">
        <h3 class="recipe-title"><%= recipe.name %></h3>
      </div>
    </div>
  <% end %>
</div>

