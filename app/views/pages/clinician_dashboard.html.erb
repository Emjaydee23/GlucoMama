<div class="actions">

  <div class="left-side">
    <!-- See all Clients Widget -->
    <div class="current-progress">
      <h3>See patients</h3>

      <% @patients.each do |patient| %>
        <div class="card">
          <p>Full Name: <%= patient.first_name %> <%= patient.last_name %></p>
          <p>D.O.B: <%= patient.birthday %></p>
          <p>Due Date: <%= patient.due_date %></p>
          <p><%= link_to "See Patient profile", recordings_path(patient: patient) %></p>
        </div>
      <% end %>


