<!-- dashboard.html.erb -->
<!-- Introduction and Mini-Profile -->
<div class="intro" style="margin: 50px">
  <h2>Welcome, <%= current_user.first_name %>!</h2>
  <p>Tracking your glucose levels during pregnancy is crucial for a healthy you and your baby.</p>
  <div class="mini-profile actions" style="margin: 50px">
      <div>
        <h3>Profile</h3>
        <p><strong>Name:</strong> <%= current_user.first_name %></li></p>
        <p><strong>Due Date:</strong> <%= current_user.due_date %></p>
      </div>
      <div class="right-side">
        <div class="calendar">
            <h3>Calendar</h3>

              <div class="month">
                <ul>
                  <li class="prev">&#10094;</li>
                  <li class="next">&#10095;</li>
                  <li>May<br><span style="font-size:18px">2024</span></li>
                </ul>
              </div>

              <ul class="weekdays">
                <li>Mo</li>
                <li>Tu</li>
                <li>We</li>
                <li>Th</li>
                <li>Fr</li>
                <li>Sa</li>
                <li>Su</li>
              </ul>

              <ul class="days">
                <li>1</li>
                <li>2</li>
                <li>3</li>
                <li>4</li>
                <li>5</li>
                <li>6</li>
                <li>7</li>
                <li>8</li>
                <li>9</li>
                <li>10</li>
                <li>11</li>
                <li>12</li>
                <li>13</li>
                <li>14</li>
                <li>15</li>
                <li>16</li>
                <li><span class="active">17</span></li>
                <li>18</li>
